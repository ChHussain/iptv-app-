{
  "name": "webos-iptv-app",
  "version": "1.0.0",
  "description": "IPTV application for LG webOS 6.0.0 that emulates MAG-based Stalker Portal",
  "main": "electron-main.js",
  "scripts": {
    "start": "python3 proxy-server.py 8080",
    "dev": "python3 proxy-server.py 8080",
    "dev-basic": "python3 -m http.server 8080",
    "test": "echo \"No tests specified\" && exit 0",
  "webos-package": "ares-package .",
  "webos-install": "ares-install -d emulator com.hawks.iptv_*.ipk",
  "webos-launch": "ares-launch -d emulator com.hawks.iptv",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build-electron": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "iptv",
    "stalker",
    "smart-stb",
    "streaming",
    "webos",
    "lg-tv",
    "mag-emulator",
    "electronic-program-guide",
    "favorites"
  ],
  "author": "IPTV App Developer",
  "license": "MIT",
  "webos": {
    "target": "webos-6.0.0",
    "features": [
      "media-player",
      "network",
      "storage"
    ]
  },
  "build": {
    "appId": "com.iptv.stalker",
    "productName": "IPTV Stalker Player",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!src",
      "!.git"
    ],
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.0.0"
  }
}
